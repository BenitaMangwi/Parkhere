extends layout
block content 
  link(rel="stylesheet", href="./stylesheets/locations.css")

  body
    h1 Available Parking
    p Nearby parking

    if locations
      // Location List
      div.blue
        // Sorting
        div(class='dropdown')
          button(class='menu-btn') ...

          div#sortingDD
            div.charging
              h4 Charging 
              p#chargingAsc.sort-option Ascending
              p#chargingDesc.sort-option Descending
            div.distance
              h4 Distance 
              p#distanceAsc.sort-option Ascending
              p#distanceDesc.sort-option Descending
            div.price
              h4 Price
              p#priceAsc.sort-option Ascending
              p#priceDesc.sort-option Descending

        
            
        ul#main
          each location in locations
            li
              div.leftie
                div
                  img.image(src="/images/image1.jpg", alt="location images")
                  p.name= location.name
                  p.address= location.address
                  p.amenities= location.amenities + ' | ' + location.availability
                  p.price= "Â£" + location.price + "/hour"
                  a.book-now(href="/bookings/booking?id=" + location.parking_space_id ) Book Now

                  
    else
      p There are no locations available.