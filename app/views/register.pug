doctype html
html(lang="en")
  head
    title FormBold Registration Form
    link(rel="stylesheet", href="style.css")
  body
    div.formbold-main-wrapper
      img.formbold-img(src="your-image-url-here.jpg")
      form(action="https://formbold.com/s/FORM_ID", method="POST")
        div.formbold-form-title
          h2.formbold-form-title-h2 Register now
          p.formbold-form-title-p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.
        div.formbold-input-flex
          div
            label.formbold-form-label(for="firstname") First name
            input.formbold-form-input(type="text", name="firstname", id="firstname")
          div
            label.formbold-form-label(for="lastname") Last name
            input.formbold-form-input(type="text", name="lastname", id="lastname")
        div.formbold-input-flex
          div
            label.formbold-form-label(for="email") Email
            input.formbold-form-input(type="email", name="email", id="email")
          div
            label.formbold-form-label(for="phone") Phone number
            input.formbold-form-input(type="text", name="phone", id="phone")
        div.formbold-mb-3
          label.formbold-form-label(for="address") Street Address
          input.formbold-form-input(type="text", name="address", id="address")
        div.formbold-mb-3
          label.formbold-form-label(for="address2") Street Address Line 2
          input.formbold-form-input(type="text", name="address2", id="address2")
        div.formbold-input-flex
          div
            label.formbold-form-label(for="state") State/Prvince
            input.formbold-form-input(type="text", name="state", id="state")
          div
            label.formbold-form-label(for="country") Country
            input.formbold-form-input(type="text", name="country", id="country")
        div.formbold-input-flex
          div
            label.formbold-form-label(for="post") Post/Zip code
            input.formbold-form-input(type="text", name="post", id="post")
          div
            label.formbold-form-label(for="area") Area Code
            input.formbold-form-input(type="text", name="area", id="area")
        div.formbold-checkbox-wrapper
          label.formbold-checkbox-label(for="supportCheckbox")
            div.formbold-relative
              input.formbold-input-checkbox(type="checkbox", id="supportCheckbox")
              div.formbold-checkbox-inner
                span.formbold-opacity-0
                  svg(width="11", height="8", viewBox="0 0 11 8", fill="none", class="formbold-stroke-current")
                    path(d="M10.0915 0.951972L10.0867 0.946075L10.0813 0.940568C9.90076 0.753564 9.61034 0.753146 9.42927 0.939309L4.16201 6.22962L1.58507 3.63469C1.40401 3.44841 1.11351 3.44879 0.932892 3.63584C0.755703 3.81933 0.755703 4.10875 0.932892 4.29224L0.932878 4.29225L0.934851 4.29424L3.58046 6.95832C3.73676 7.11955 3.94983 7.2 4.1473 7.2C4.36196 7.2 4.55963 7.11773 4.71406 6.9584L10.0468 1.60234C10.2436 1.4199 10.2421 1.1339 10.0915 0.951972ZM4.2327 6.30081L4.2317 6.2998C4.23206 6.30015 4.23237 6.30049 4.23269 6.30082L4.2327 6.30081Z", stroke-width="0.4")
        button.formbold-btn Register Now