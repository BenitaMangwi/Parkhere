extends layout2

block content
  link(rel="stylesheet", href="/stylesheets/new_booking.css")

  body
    div.formbold-main-wrapper
      div.formbold-form-wrapper
        img.image(src="/images/image3.jpeg", alt="Image")
        form(action="/bookings/booking" method="POST")
          div.flex.flex-wrap.formbold--mx-3

          div.flex.flex-wrap.formbold--mx-3
            div.w-full.sm-w-half.formbold-px-3
              div.formbold-mb-5.w-full
                label.formbold-form-label From
                input.formbold-form-input(type="date" name="date" id="date" value=booking?booking.start_date.toISOString().substring(0, 10):"", required)
            
            div.w-full.sm-w-half.formbold-px-3
              div.formbold-mb-5.w-full
                label.formbold-form-label To
                input.formbold-form-input(type="date" name="date" id="date" value=booking?booking.end_date.toISOString().substring(0, 10):"", required)
            
             
          div.flex.flex-wrap.formbold--mx-3
            div.w-full.sm-w-half.formbold-px-3
              div.formbold-mb-5
                label.formbold-form-label From
                input.formbold-form-input(type="time" name="time" id="time" value=booking? booking.start_time.toISOString().split('T')[1].split('.')[0] : '', required) 
            
            div.w-full.sm-w-half.formbold-px-3
              div.formbold-mb-5
                label.formbold-form-label To
                input.formbold-form-input(type="time" name="time" id="time" value= booking? booking.end_time.toISOString().split('T')[1].split('.')[0] : '')
          
          div.flex.formbold-mb-5
            p.charging Need charging?
            div.flex 
              input.formbold-radio(type="radio" name="radio1" id="radioButton1")
              label.formbold-radio-label(for="radioButton1") Yes
            div.flex
              input.formbold-radio(type="radio" name="radio1" id="radioButton2")
              label.formbold-radio-label(for="radioButton2") No
          
          div.total-p
            p.price  Total Price 
          
          
          div.buttons
            a.formbold-btn(href="/bookings" ) Book Now
            a.formbold-btn1(href="https://www.google.com/maps/@51.6517876,0.0825904,14z?entry=ttu" ) Get Directions 