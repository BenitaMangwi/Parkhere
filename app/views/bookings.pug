extends layout2

block content
  link(rel="stylesheet", href="./stylesheets/bookings.css")

  body
    h1 Booking Details

    if bookings
      ul#main
        each location in locations
          li
            .leftie
                div
                  p.name= location.name
                  p.address= location.address
          
          each booking in bookings
            .leftie 
              p.date #{booking.start_time}
            
            .right
              div
                img(src="/images/bookmark.png", alt="save icon")
                p.dots ...
                  a(href=`/bookings/${booking.booking_id}/delete`) Delete
                  a(href=`/bookings/${booking.booking_id}/update`) Update
    else
      p No bookings