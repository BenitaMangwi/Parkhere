extends layout2

block content
  link(rel="stylesheet", href="./stylesheets/bookings.css")

  body
    h1 Booking Details

    if bookings
      ul#main
        each booking in bookings
          li
            .left
              div
                p.name= booking.booking_name
                p.address= booking.booking_address
                p.date= booking.start_date?booking.start_date.toISOString().split('T')[0]:''
                p.time= `Booked at: ${booking.start_time}`

                
                
            
            .right
              div

                div(class="drop-down")
                  button(class='menu-btn') ...

                    div(class='dropdown-content')
                      a(href=`/bookings/${booking.booking_id}/delete`) Delete
                      a(href=`/bookings/${booking.booking_id}/update`) Update
    
    
    
    
    else   
      p No bookings